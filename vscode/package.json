{
  "private": true,
  "version": "0.27.0",
  "name": "does-it-throw",
  "displayName": "Does it throw",
  "author": "michaelangeloio",
  "publisher": "michaelangeloio",
  "icon": "oso_logo.png",
  "description": "Support for Oso policies written in Polar.",
  "keywords": [
    "authorization",
    "access control",
    "multi-root ready"
  ],
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/osohq/oso"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.10.0",
    "vscode": "^1.52.0"
  },
  "main": "./out/client.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "typescript",
        "aliases": [
          "ts",
          "Typescript"
        ],
        "extensions": [
          ".ts"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Oso",
      "properties": {
      }
    }
  },
  "scripts": {
    "testing": "tsx script.ts",
    "package": "vsce package  --githubBranch main --out does-it-throw.vsix",
    "publish": "vsce publish--githubBranch main --packagePath does-it-throw.vsix",
    "typecheck": "tsc --noEmit",
    "fix": "gts fix",
    "lint": "gts lint -- . --max-warnings 0",
    "fmtwrite": "prettier --write 'client/**/*.ts' 'server/**/*.ts' 'test/**/*.ts'",
    "fmtcheck": "prettier --check 'client/**/*.ts' 'server/**/*.ts' 'test/**/*.ts'",
    "test": "tsc --build test && npm run esbuild-all && node ./out/test/src/runTest.js",
    "esbuild-client": "esbuild client=./client/src --bundle --outdir=out --external:vscode --format=cjs --platform=node",
    "esbuild-server": "esbuild server=./server/src --bundle --outdir=out --external:vscode --format=cjs --platform=node",
    "esbuild-all": "npm run esbuild-server --sourcemap && npm run esbuild-client --sourcemap",
    "vscode:prepublish": "npm run esbuild-server --minify && npm run esbuild-client --minify"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mixpanel": "^0.14.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.3",
    "@types/semver": "^7.3.8",
    "@types/vscode": "^1.52.0",
    "@vscode/test-electron": "^1.6.2",
    "@vscode/vsce": "^2.21.1",
    "esbuild": "^0.13.14",
    "glob": "^7.2.0",
    "gts": "^3.1.0",
    "mocha": "^9.1.3",
    "semver": "^7.3.5",
    "tsx": "^3.14.0",
    "typescript": "^4.4.3"
  }
}
